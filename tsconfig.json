{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Directory for compiled JS files
    "rootDir": "./src" // Root directory for source TS files
  },
  "include": [
    "src/**/*"
  ], // Include all files in the src directory
  "exclude": [
    "node_modules",
    "dist"
  ]
}
